<?xml version="1.0" encoding="utf-8"?>
<!--
    PICHAU TI - Regras de Extração de Dados
    (C) 2024-2025 Pichau Informatica Ltda.
    
    Este arquivo impede a extração de dados do app via backup.
    Aumenta a segurança contra engenharia reversa e roubo de dados.
-->
<data-extraction-rules>
    <!-- Regras para backup na nuvem (Android 12+) -->
    <cloud-backup>
        <!-- Não permitir backup de nenhum dado -->
        <exclude domain="root" path="." />
        <exclude domain="file" path="." />
        <exclude domain="database" path="." />
        <exclude domain="sharedpref" path="." />
        <exclude domain="external" path="." />
    </cloud-backup>
    
    <!-- Regras para transferência de dispositivo -->
    <device-transfer>
        <!-- Não permitir transferência de dados entre dispositivos -->
        <exclude domain="root" path="." />
        <exclude domain="file" path="." />
        <exclude domain="database" path="." />
        <exclude domain="sharedpref" path="." />
        <exclude domain="external" path="." />
    </device-transfer>
</data-extraction-rules>
